<h6 class="m-3 font-weight-bold text-primary"> New Appointment </h6>
<div class="card" style="height: 30rem; padding-top: 4%;">
    <div class="col-12">
      <%= form_for @appointment, url: {action: "create"} do |a| %>
        <div class="container">

          <div class="form-row">
            <div class="form-group col-md-12s">
              <div class="col-sm-12">
                <label for="">Starts At</label>
                <%= a.date_select :starts_at, class: "form-control" %>
                <%= a.time_select :starts_at, :ignore_date => true, class: "form-control" %>
              </div>
            </div>
          </div>

          <div class="form-row">
            <div class="form-group col-md-12">
              <div class="col-sm-12">
                <label for="">Ends At</label>
                <%= a.date_select :ends_at, class: "form-control" %>
                <%= a.time_select :ends_at, :ignore_date => true, class: "form-control" %>
              </div>
            </div>
          </div>

          <div class="form-row">
            <div class="form-group col-md-12">
              <div class="col-sm-12">
                <label class="col-lg-1 control-label" for="">Patient</label>
                 <%= a.collection_select :patient_id, Patient.all, :id, :name, class: "form-control" %>
              </div>
            </div>
          </div>

          <div class="form-row">
            <div class="form-group col-md-12">
              <div class="col-sm-12">
                <label class="col-lg-1 control-label" for="">Doctor</label>
                <%= a.collection_select :doctor_id, Doctor.all, :id, :name, class: "form-control" %>
              </div>
            </div>
          </div>

          <div class="form-row">
            <div class="form-group col-md-12">
              <div class="col-sm-8">
                <div class="float-right">
                  <button type="submit" class="btn btn-success"><i class="fas fa-save mr-1"></i>Save</button>
                  <%= link_to appointment_path(a), :method => :get, class: "btn btn-secondary" do %>
                    <i class="fas fa-save mr-1"></i>Cancel
                  <% end %>
                </div>
              </div>
            </div>
          </div>

        </div>
      <% end %>
    </div>
</div>
