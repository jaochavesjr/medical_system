<h6 class="m-3 font-weight-bold text-primary"> New Doctor </h6>
<div class="card" style="height: 30rem; padding-top: 4%;">
  <div class="col-12">
    <%= form_for @doctor, url: {action: "create"} do |d| %>
      <div class="container">
        <div class="form-row">
          <div class="form-group col-md-12">
            <div class="col-sm-8">
              <label for="">Name</label>
              <%= d.text_field :name, class: "form-control" %>
            </div>
          </div>
        </div>

        <div class="form-row">
          <div class="form-group col-md-7">
            <div class="col-sm-4">
              <label for="">CRM</label>
              <%= d.text_field :crm, class: "form-control" %>
            </div>
          </div>
        </div>

        <div class="form-row">
          <div class="form-group col-md-7">
            <div class="col-sm-4">
              <label for="">CRM-UF</label>
              <%= d.text_field :crm_uf, class: "form-control" %>
            </div>
          </div>
        </div>

        <div class="form-row">
          <div class="form-group col-md-12">
            <div class="col-sm-8">
              <div class="float-right">
                <button type="submit" class="btn btn-success"><i class="fas fa-save mr-1"></i>Save</button>
                <%= link_to :back, class: "btn btn-secondary" do %>
                  <i class="fas fa-arrow-alt-circle-left"></i> Back
                <% end %>
              </div>
            </div>
          </div>
        </div>
      </div>

    <% end %>
  </div>
</div>
