
<div class="header">
  <div class="row">
  </div>
</div>

</div>

<div class="row">
  <div class="col-12">
      <!-- Tab panes -->
    <div class="tab-content">
      <div class="tab-pane active">
        <div class="group">
          <%= form_for @doctor, url: {action: "create"} do |d| %>
            <div class="task-form">

              <div class="row">
                <div class="col-4">
                  <label for="">Name</label>
                  <%= d.text_field :name, class: "form-control" %>
                </div>
              </div>

              <div class="row">
                <div class="col-4">
                  <label for="">CRM</label>
                  <%= d.text_field :crm, class: "form-control" %>
                </div>
              </div>

              <div class="row">
                <div class="col-4">
                  <label for="">CRM_UF</label>
                  <%= d.text_field :crm_uf, class: "form-control" %>
                </div>
              </div>

              <div class="row">
                <div class="col-6">
                  <div class="float-center">
                    <button type="submit" class="btn btn-medium btn-green with-icon"><i class="fas fa-save mr-1"></i>Save</button>
                  </div>
                </div>
              </div>

            </div>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>


