<h6 class="m-3 font-weight-bold text-primary"> Edit Doctor </h6>
<% if @doctor.errors.any? %>
  <div class="alert alert-danger alert-dismissable">
    <button type="button" class="close" data-dismiss="alert" aria-hidden="true">x</button>
    <ul>
      <% @doctor.errors.full_messages.each do |message| %>
        <li> <%= message %> </li>
      <% end %>
    </ul>
  </div>
<% end %>
<div class="card" style="height: 30rem; padding-top: 4%;">
  <div class="col-12">
    <%= form_for @doctor, url: {action: "update"} do |d| %>
      <div class="container">
        <div class="form-row">
          <div class="form-group col-md-12">
            <div class="col-sm-8">
              <label for="">Name</label>
              <%= d.text_field :name, class: "form-control" %>
            </div>
          </div>
        </div>

        <div class="form-row">
          <div class="form-group col-md-7">
            <div class="col-sm-4">
              <label for="">CRM</label>
              <%= d.text_field :crm, class: "form-control" %>
            </div>
          </div>
        </div>

        <div class="form-row">
          <div class="form-group col-md-7">
            <div class="col-sm-4">
              <label for="">CRM-UF</label>
              <%= d.text_field :crm_uf, class: "form-control" %>
            </div>
          </div>
        </div>

        <div class="form-row">
          <div class="form-group col-md-12">
            <div class="col-sm-8">
              <div class="float-right">
                <button type="submit" class="btn btn-success"><i class="fas fa-save mr-1"></i>Update</button>
                <%= link_to doctors_path(p), :method => :get, class: "btn btn-secondary" do %>
                  <i class="fas fa-save mr-1"></i>Cancel
                <% end %>
              </div>
            </div>
          </div>
        </div>
      </div>

    <% end %>
  </div>
</div>
